{
  "name": "esi-html-rewriter",
  "version": "1.0.0",
  "description": "ESI parser for Cloudflare Workers",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "prettier --write .",
    "lint:check": "prettier --check .",
    "types": "npm run types:generate && npm run types:check",
    "types:generate": "wrangler types src/worker-configuration.d.ts",
    "types:check": "tsc --noEmit",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy"
  },
  "keywords": [
    "esi",
    "edge-side-includes",
    "cloudflare",
    "workers"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.6",
    "prettier": "^3.2.5",
    "typescript": "^5.6.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.47.0"
  },
  "dependencies": {
    "serialize-error": "^12.0.0"
  }
}
